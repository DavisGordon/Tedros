<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<!-- PROJECT -->
	<modelVersion>4.0.0</modelVersion>
  	<groupId>org.tedros</groupId>
  	<artifactId>tedrosbox</artifactId>
  	<version>8-5.1.0</version>
  	<packaging>pom</packaging>
  	
  	<name>tedros box</name>
  	<description>The tedros box parent projects</description>
  	
  	
	<organization>
		<name>Tedros</name>
	</organization>
  	
  	<!-- PROPERTIES -->
	<properties>
	
	
		<app.ext>8-2.0.0</app.ext>
		<app.docs>8-2.0.0</app.docs>
		<app.location>8-2.0.0</app.location>
		<app.person>8-2.0.0</app.person>
		<app.services>8-2.0.0</app.services>
	
		<javafx.version>1.8.0_261</javafx.version>
		<java.version>1.8</java.version>
		<maven.compiler.target>1.8</maven.compiler.target>
    	<maven.compiler.source>1.8</maven.compiler.source>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java.home>C:\Program Files\Java\jdk1.8.0_102\bin</java.home>
		
		<commons-collections.version>4.4</commons-collections.version>
		<commons.logging.version>1.2</commons.logging.version>
		<commons.io.version>2.7</commons.io.version>
		<commons.lang.version>3.12.0</commons.lang.version>
		<commons.text.version>1.9</commons.text.version>
		<commons.compress.version>1.21</commons.compress.version>
		
		<apache.poi>4.1.2</apache.poi>
		<jackson.version>2.14.2</jackson.version>
		
		<!-- Define the version of OPEN HTML TO PDF in the properties section of your POM. -->  	       
	  	<openhtml.version>1.0.8</openhtml.version>
		
		<junit.version>4.13</junit.version>
		<cargo.version>1.9.13</cargo.version>
		<h2.version>1.4.199</h2.version>
		<eclipselink.version>2.7.7</eclipselink.version>
		<jackson.jaxrs.json.provider>2.11.2</jackson.jaxrs.json.provider>
		
		<tomee.version>7.1.3</tomee.version>
		<tomee.ejb.url>http://127.0.0.1:8080/tomee/ejb</tomee.ejb.url>
		<tomee.webapp>${project.basedir}\server-application\target\catalina-base\apps</tomee.webapp>
	
		<javaee.api.version>7.0-2</javaee.api.version>
		<openejb.version>7.1.3</openejb.version>
	
	
	
	</properties>
  
  	<!-- DEVELOPERS -->
	<developers>
		<developer>
			<id>davis.dun</id>
			<name>Davis Gordon Dun</name>
			<email>tedrosbox@gmail.com</email>
			<organization>Tedros</organization>
		</developer>
	</developers>
  
  	<!-- BUILD -->
  	<build>
    	<plugins>
      		<plugin>
        		<groupId>org.apache.maven.plugins</groupId>
        		<artifactId>maven-compiler-plugin</artifactId>
        		<version>3.3</version>
        		<configuration>
          			<source>${java.version}</source>
          			<target>${java.version}</target>
        		</configuration>
      		</plugin>
  		</plugins>
 	</build>
 	
 	<!-- MODULES -->
	<modules>
		<module>tdrs-box</module>
		<module>tdrs-fx</module>
		<module>tdrs-miscellaneous</module>
		<module>tdrs-server</module>
		<module>server-application</module>
    <module>app-chat</module>
  </modules>
	
	<!-- REPOSITORIES -->
	<repositories>
		<repository>
			<id>oss.sonatype.org</id>
			<name>OSS Sonatype Staging</name>
			<url>https://oss.sonatype.org/content/groups/staging</url>
		</repository>
		<repository>
			<id>apache.releases.https</id>
			<name>Apache</name>
			<url>https://repository.apache.org/service/local/staging/deploy/maven2</url>
		</repository>
		<repository>
			<id>Tedros-Box</id>
			<name>Tedros</name>
			<url>https://maven.pkg.github.com/tedros-box/package</url>
		</repository>
  	</repositories>
  	
 	<distributionManagement>
	   <repository>
	     <id>Tedros-Box</id>
	     <name>GitHub Tedros Apache Maven Packages</name>
	     <url>https://maven.pkg.github.com/tedros-box/package</url>
		 <uniqueVersion>false</uniqueVersion>
	   </repository>
	</distributionManagement>
	
</project>